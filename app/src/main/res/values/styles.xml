<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorGray</item>
        <item name="android:textColorHighlight">@color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/title_margin_16</item>
        <item name="android:layout_marginTop">@dimen/title_margin_16</item>
    </style>

    <style name="checkBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:paddingLeft">@dimen/ckb_padding_left</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

</resources>